<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<% if (editing) {%>edit-product<% } else{ %>add-product<% }%>" method="POST">
            <div class="form-control">
                <label for="txt_title">Title</label>
                <input type="text" name="txt_title" id="txt_title" value="<% if (editing) {%><%=product.txt_title%><% } %>">
            </div>
            <div class="form-control">
                <label for="blb_image">Image URL</label>
                <input type="text" name="blb_image" id="blb_image" value="<% if (editing) {%><%=product.blb_image%><% } %>">
            </div>
            <div class="form-control">
                <label for="dbl_price">Price</label>
                <input type="number" name="dbl_price" id="dbl_price" step="0.01" value="<% if (editing) {%><%=product.dbl_price%><% } %>">
            </div>
            <div class="form-control">
                <label for="txt_description">Description</label>
                <textarea name="txt_description" id="txt_description" rows="4"><% if (editing) {%><%=product.txt_description%><% } %></textarea>
            </div>
            <% if (editing) {%>
               <input type="hidden" value="<%=product.int_product_id%>" name="int_product_id">
            <% } %>
            <button class="btn" type="submit"><% if (editing) {%> Update <% } else{ %>Add <% }%>Product</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>