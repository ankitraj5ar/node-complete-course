<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product of prods) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.txt_title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= product.blb_image %>"
                                alt="<%= product.txt_title %>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= product.dbl_price %></h2>
                            <p class="product__description"><%= product.txt_description %></p>
                        </div>
                        <div class="card__actions">
                            <a class="btn" href="/products/<%=product._id %>">Details</a>
                            <%- include('../includes/add-to-cart.ejs',{product:product}) %>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>